/*
Versión básica: prueba de pattern matching con data y ^.
Nil = java null
*/

data shape = {
    Circle(radius:float),
    Rectangle(length:float, width:float)
}


fun shape_type(s:shape):string =
    match s {
        case Circle(r) -> "its a Circle",
        case Rectangle(l, w) -> "its a Rectangle",
        default -> "Unrecognized shape"
    }

let c = ^Circle(5.0)
let r = ^Rectangle(3.0, 4.0)

print(c)
print(r)

print(shape_type(c))
print(shape_type(r))


